
<div class="container-fluid stage" id="workshop-wisard">
	<div class="col-sm-6 m-t-b-5 stage-card">
		<div class="p-l-r-2 p-t-b title-workshop title-workshop-card ">
			<h2>Creación de taller</h2>
		</div>

		<a href="#" class="wizard-section">

		<%= link_to authenticated_workshops_step_path(@workshop, 'step1'), class: "wizard-section #{@workshop.steps?(['step1','step2','step3'])? 'active' : ''}" do %>
			<h2 class="light-title">1: Taller
			<span class="pull-right">
				<%=  @workshop.step?('step1')? icon('check-circle-o') : icon('circle-o') %>
				<%=  @workshop.step?('step2')? icon('check-circle-o') : icon('circle-o') %>
				<%=  @workshop.step?('step3')? icon('check-circle-o') : icon('circle-o') %>
			</span>
			</h2>
			<h4 class="light-desc">Lugar, Rubro, Disciplina, Características, y más info tuya como instructor, etc.</h4>
		<% end %>

		<%= link_to authenticated_workshops_step_path(@workshop, 'step4'), class: "wizard-section #{@workshop.steps?(['step4','step5'])? 'active' : ''}" do %>
			<h2 class="light-title">2: Calendario
			<span class="pull-right">
				<%=  @workshop.step?('step4')? icon('check-circle-o') : icon('circle-o') %>
				<%=  @workshop.step?('step5')? icon('check-circle-o') : icon('circle-o') %>
			</span>
			</h2>
			</h2>
			<h4 class="light-desc">Calendarios, Agenda, Aspectos a tener en cuenta.</h4>
		<% end %>

		<%= link_to authenticated_workshops_step_path(@workshop, 'step6'), class: "wizard-section #{@workshop.steps?(['step6'])? 'active' : ''}" do %>
			<h2 class="light-title">3: Precios
			<span class="pull-right">
				<%=  @workshop.step?('step6')? icon('check-circle-o') : icon('circle-o') %>
				<%#=  @workshop.step?('step7')? icon('check-circle-o') : icon('circle-o') %>
			</span>
			</h2>
			<h4 class="light-desc">Precios</h4>
		<% end %>

		<div class="sections-moves p-t-b m-t-2">
			<%= link_to 'ATRAS', authenticated_main_to_teach_workshops_path, class: 'action' %>
			<% if @workshop.last_checkpoint_step.present? %>
				<%= link_to authenticated_workshops_step_path(@workshop, @workshop.last_checkpoint_step), class: 'action' do %>
					SIGUIENTE
				<% end %>
			<% end %>
		</div>
	</div>
</div>
