    <ul>
      <li>

        <% new_msj_learner = current_profile.workshop_schedule_message_observers.state_new.kind_learner.count %>
        <%= link_to authenticated_main_to_learn_workshops_path, class: 'partial-selector' do %>
          Mis talleres <% unless new_msj_learner.zero? %><span class='badge'><i class="fa fa-envelope-o" aria-hidden="true"></i> <%= new_msj_learner %></span><% end %>
        <% end %>
      </li>
    </ul>
    <ul class="b-t-g p-t">
      <li>
        <%= link_to authenticated_main_wishlist_path, class: 'partial-selector' do %>
          <i class="fa fa-bookmark-o" aria-hidden="true"></i> Lista de deseos
