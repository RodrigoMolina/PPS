<section class="p-t-b-2 p-l-2 p-r-4 options-menu">
  <div class="workshop-menu" class="p-l p-t-b-2">
    <h6 class="">Como instructor</h6>
    <ul>
      <li>
        <% new_msj_teacher = current_profile.workshop_schedule_message_observers.state_new.kind_teacher.count %>
        <%= link_to authenticated_main_to_teach_workshops_path, class: 'partial-selector' do %>
          Mis talleres <% unless new_msj_teacher.zero? %><span class='badge'><i class="fa fa-envelope-o" aria-hidden="true"></i> <%= new_msj_teacher %></span><% end %>
        <% end %>
      </li>
      <li>
        <%= link_to authenticated_workshops_create_path, class: 'partial-selector' do %>
          Crear taller
