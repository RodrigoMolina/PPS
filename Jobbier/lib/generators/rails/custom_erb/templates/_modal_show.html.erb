<%% locale_set = 'activerecord.attributes.<%= singular_table_name %>' %>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
  <h3 class="modal-title">
    <%%= icon(:square)%> <%%= t :<%= singular_table_name %> %> #<%%= @<%= singular_table_name %>.id %>
  </h3>
</div>

<div class="modal-body" style="padding: 0;">

 <div class="panel panel-default">
  <div class="panel-body">

    <% attributes.each do |attribute| %>
    <div class="form-group">
      <%%= label_tag :<%= attribute.column_name %>, t(:<%= attribute.column_name %>, scope: locale_set),class: 'control-label' %>
      <p class="form-control-static"><%%= @<%= singular_table_name %>.<%= attribute.name %> %></p>
    </div>
    <% end %>

  </div>
</div>


</div>
